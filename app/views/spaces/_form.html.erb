<div class="row">
  <div class="col-md-6">
    <%= form_for(@space, html: {class: "form-group" } ) do |f| %>
      <% if @space.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

          <ul>
          <% @space.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field ">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :city_id %><br />
        <%= f.collection_select(:city_id, City.all, :id, :name, { class: "form-control" } ) %>
      </div>
      <div class="field">
        <%= f.label :rating %><br />
        <%= f.text_field :rating, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :website_link %><br />
        <%= f.text_field :website_link, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :yelp_link %><br />
        <%= f.text_field :yelp_link, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :facebook_link %><br />
        <%= f.text_field :facebook_link, class: "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, class: "form-control"  %>
      </div>
      <div class="field">
