      </div>
      <div class="field">
        <%= f.label :is_rehearsal, "Is Rehearsal" %>
        <%= f.check_box :is_rehearsal %>
      </div>
      <div class="field">
        <%= f.label :is_performance, "Is Performance" %>
        <%= f.check_box :is_performance %>
      </div>
      <div class="actions">
        <%= f.submit "Edit", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>
