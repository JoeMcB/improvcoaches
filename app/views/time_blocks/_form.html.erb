<%
  days = [
           ["Sunday",    1],
           ["Monday",    2],
           ["Tuesday",   3],
           ["Wednesday", 4],
           ["Thursday",  5],
           ["Friday",    6],
           ["Saturday",  7]
         ]
%>

<%= form_for(@time_block) do |f| %>
  <% if @time_block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_block.errors.count, "error") %> prohibited this time_block from being saved:</h2>

      <ul>
      <% @time_block.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :day_of_week %><br />
    <%= f.select :day_of_week, options_for_select(days) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
