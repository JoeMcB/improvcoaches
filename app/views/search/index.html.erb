<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
        Quick Coach Search
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Find available coaches for your improv training
      </p>
    </div>

    <!-- Simple Search Card -->
    <div class="bg-white rounded-2xl shadow-lg border p-8">
      <%= render 'basic' %>
    </div>
    
    <!-- Advanced Search Link -->
    <div class="text-center mt-8">
      <%= link_to search_path, 
          class: "inline-flex items-center text-purple-600 hover:text-purple-700 font-medium transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
        </svg>
        Advanced Search Options
      <% end %>
    </div>
  </div>
</div>