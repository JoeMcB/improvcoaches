<%= form_tag :login, class: "space-y-6", data: { turbo: false } do %>
  
  <!-- Email Field -->
  <div>
    <%= label_tag :email, 'Email Address', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= text_field_tag :email, params[:email], 
        class: "w-full rounded-lg border-gray-300 focus:border-purple-500 focus:ring-purple-500 transition-colors duration-200", 
        placeholder: "Enter your email", 
        autofocus: true %>
  </div>
  
  <!-- Password Field -->
  <div>
    <%= label_tag :password, 'Password', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= password_field_tag :password, '', 
        class: "w-full rounded-lg border-gray-300 focus:border-purple-500 focus:ring-purple-500 transition-colors duration-200", 
        placeholder: "Enter your password" %>
  </div>
  
  <!-- Remember Me & Forgot Password -->
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= check_box_tag :remember_me, 1, params[:remember_me], 
          class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
      <%= label_tag :remember_me, "Remember me", class: "ml-2 text-sm text-gray-700" %>
    </div>
    <%= link_to "Forgot password?", new_password_reset_path, 
        class: "text-sm font-medium text-purple-600 hover:text-purple-700 transition-colors duration-200" %>
  </div>
  
  <!-- Hidden invite code field -->
  <% if(!local_assigns[:invite_code].nil?) %>
    <%= hidden_field_tag :invite_code, local_assigns[:invite_code] %>
  <% end %>
  
  <!-- Submit Button -->
  <div>
    <%= submit_tag "Sign In", class: "btn-primary w-full text-base py-3" %>
  </div>
  
  <!-- Divider -->
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">Or continue with</span>
    </div>
  </div>
  
  <!-- Facebook Login -->
  <div class="text-center">
    <div class="fb-login-button" 
         data-width="" 
         data-size="large" 
         data-onlogin="FBLogin();" 
         data-button-type="login_with" 
         data-layout="default" 
         data-auto-logout-link="false" 
         data-use-continue-as="false">
    </div>
  </div>
  
<% end %>