<%= form_tag :login, class: "form-signin" do %>
	<div class="form-group">
		<%= label_tag :email, 'Email', class: 'sr-only' %>
		<%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email Address", autofocus: "" %>
	</div>
	<div class="form-group">
		<%= label_tag :password, 'Password', class: "sr-only" %>
		<%= password_field_tag :password, '', class: "form-control", placeholder: "Password" %>

		<div class="pull-right">
			<%= label_tag :remember_me, "Remember Me", class: "remember-me" do %>
			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
			Remember Me
		</div>
	<% end %>
	</div>
	
	<%= submit_tag "Login", class: "btn btn-primary btn-lg btn-block"  %>

	<% if(!local_assigns[:invite_code].nil?) %>
	    <%= hidden_field_tag :invite_code, local_assigns[:invite_code] %>
	<% end %>


	<%= link_to "Forgot Password?", new_password_reset_path, class: "pull-right" %>
<% end %>