<%= turbo_stream.replace "alerts" do %>
  <div id="alerts" class="fixed top-4 right-4 z-50">
    <div class="rounded-lg border bg-green-50 border-green-200 text-green-800 px-4 py-3 shadow-lg max-w-sm">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <span class="font-medium">Your invite has been cancelled.</span>
      </div>
    </div>
  </div>
  
  <script>
    // Auto-hide alert after 5 seconds
    setTimeout(() => {
      const alerts = document.getElementById('alerts');
      if (alerts) {
        alerts.style.transition = 'opacity 0.5s ease-out';
        alerts.style.opacity = '0';
        setTimeout(() => alerts.remove(), 500);
      }
    }, 5000);
  </script>
<% end %>

<%= turbo_stream.remove "invite_#{@invite.id}" %>