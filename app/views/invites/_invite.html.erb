<tr id="invite_<%= invite.id %>">
	<td><%= invite.recipient %></td>
	<td><%= invite.status %></td>
	<td><!-- empty --></td>
	<td>
		<% if invite.status == "pending" %>
			<%= link_to profile_invite_resend_path(invite), data: { turbo_method: :post } do %>
				<span class="glyphicon glyphicon-refresh" ></span>
			<% end %>
		<% end %>
	</td>
	<td>
		<% if invite.status == "pending" %>
			<%= link_to profile_invite_cancel_path(invite), data: { turbo_method: :delete } do %>
				<span class="glyphicon glyphicon-remove" ></span>
			<% end %>
		<% end %>
	</td>
</tr>