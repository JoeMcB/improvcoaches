{
  "name": "improvcoaches",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.5",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.4"
  },
  "scripts": {
    "build:css": "tailwindcss -c ./tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch:css": "tailwindcss -c ./tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch --poll",
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:/assets/* --minify",
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:/assets/* --watch",
    "build": "yarn build:css && yarn build:js"
  }
}
