{
    "files.eol": "\n",
    "ruby.useBundler": true,
    "ruby.lscodeServer.enabled": true, // Ensure the use of language server
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        },
        "reek": {
            "useBundler": true
        }
    },
    "ruby.format": "rubocop",
    "editor.formatOnSave": true, // Automatically format on save
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    }
}
